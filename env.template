# ============================================
# 环境配置模板
# ============================================
# 复制此文件为 .env 用于配置环境变量
# 中间件服务运行在Docker中

# ============================================
# 数据库配置（连接Docker中的服务）
# ============================================

# PostgreSQL - 本地连接
DATABASE_URL=postgresql://agentsys:agentsys123@localhost:5432/agentsys

# Redis - 本地连接
REDIS_URL=redis://localhost:6379/0

# ChromaDB - 本地连接
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIR=./data/chroma

# ============================================
# LLM提供商配置
# ============================================

# LLM提供商选择: dashscope 或 openai
LLM_PROVIDER=dashscope

# 阿里百炼平台配置（必填）
DASHSCOPE_API_KEY=your-dashscope-api-key-here
DASHSCOPE_MODEL=qwen-turbo
DASHSCOPE_EMBEDDING_MODEL=text-embedding-v3

# OpenAI配置（可选）
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=gpt-3.5-turbo

# 搜索工具配置
# 搜索提供商选择: tavily 或 baidu
SEARCH_PROVIDER=tavily

# Tavily搜索工具（可选 - 用于联网搜索）
TAVILY_API_KEY=

# 百度搜索工具配置（可选 - 使用网页搜索不需要API Key）
BAIDU_API_KEY=
BAIDU_ENABLED=true

# ============================================
# 安全配置
# ============================================

SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# CORS配置
# ============================================

CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# API配置
# ============================================

API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Agent System API
API_VERSION=1.0.0

# ============================================
# Embedding配置
# ============================================

EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
USE_DASHSCOPE_EMBEDDING=true

